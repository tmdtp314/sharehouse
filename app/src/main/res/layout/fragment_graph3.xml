<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_graph3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"


        app:layout_constraintTop_toTopOf="@+id/full2">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/background"
            android:baselineAligned="false"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="@dimen/_6sdp">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="170dp"
                android:layout_height="55dp"
                app:neumorph_shapeType="basin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/_5sdp"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/light_shadow"
                app:neumorph_shadowElevation="3dp">


                <soup.neumorphism.NeumorphTextView
                    android:id="@+id/tv_graph2_roomID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="어제 대비 오늘"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="내 방"/>

            <com.mckrpk.animatedprogressbar.AnimatedProgressBar
                android:id="@+id/progressbar_room"
                android:layout_width="230dp"
                android:layout_marginLeft="100dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                app:animationDurationInMs="1300"
                app:animationStyle="line"
                app:lineWidth="20dp"
                app:max="1000"
                app:progress="750"
                app:progressColor="@color/Orange"
                app:progressTipColor="@color/colorAccent"
                app:progressTipEnabled="true"
                app:trackColor="@color/dark_shadow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="House \n전체"/>
            <com.mckrpk.animatedprogressbar.AnimatedProgressBar
                android:id="@+id/progressbar_house"
                android:layout_width="230dp"
                android:layout_marginLeft="100dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="195dp"
                app:animationDurationInMs="1300"
                app:animationStyle="line"
                app:lineWidth="20dp"
                app:max="1000"
                app:progress="750"
                app:progressColor="@color/colorPrimary"
                app:progressTipColor="@color/colorAccent"
                app:progressTipEnabled="true"
                app:trackColor="@color/dark_shadow" />
            <TextView
                android:id="@+id/tv_house_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55wh  /"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="225dp"
                android:layout_marginBottom="55dp"/>
            <TextView
                android:id="@+id/tv_house_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 80wh"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="280dp"
                android:layout_marginBottom="55dp"/>


            <TextView
                android:id="@+id/tv_myroom_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="55wh  /"
                android:layout_gravity="bottom"
                android:layout_marginLeft="225dp"
                android:layout_marginBottom="160dp"/>
            <TextView
                android:id="@+id/tv_myroom_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 80wh"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="280dp"
                android:layout_marginBottom="160dp"/>




        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>

</FrameLayout>